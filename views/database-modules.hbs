<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{pageTitle}} - Database Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            min-height: 100vh;
            background: #343a40;
        }
        .sidebar .nav-link {
            color: #adb5bd;
        }
        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            color: #fff;
            background: #495057;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 px-0">
                <div class="sidebar">
                    <div class="p-3">
                        <h4 class="text-white">
                            <i class="fas fa-database"></i> DB Admin
                        </h4>
                    </div>
                    <nav class="nav flex-column">
                        <a class="nav-link" href="/admin/database">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                        <a class="nav-link" href="/admin/database/users">
                            <i class="fas fa-users"></i> Users
                        </a>
                        <a class="nav-link" href="/admin/database/courses">
                            <i class="fas fa-book"></i> Courses
                        </a>
                        <a class="nav-link active" href="/admin/database/modules">
                            <i class="fas fa-list"></i> Modules
                        </a>
                        <a class="nav-link" href="/admin/database/purchases">
                            <i class="fas fa-shopping-cart"></i> Purchases
                        </a>
                        <a class="nav-link" href="/admin/database/progress">
                            <i class="fas fa-chart-line"></i> Progress
                        </a>
                        <hr class="my-3">
                        <a class="nav-link" href="/login">
                            <i class="fas fa-home"></i> Back to Grocademy
                        </a>
                        <a class="nav-link" href="/docs">
                            <i class="fas fa-book"></i> API Documentation
                        </a>
                    </nav>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-10">
                <div class="p-4">
                    {{#if error}}
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i> {{error}}
                    </div>
                    {{else}}
                    
                    <!-- Page Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1><i class="fas fa-list"></i> Database Modules</h1>
                        {{#if selectedCourse}}
                        <div>
                            <span class="badge bg-info fs-6">Course: {{selectedCourse.title}}</span>
                        </div>
                        {{/if}}
                    </div>

                    <!-- Filter Form -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <form method="GET" class="row g-3">
                                <div class="col-md-6">
                                    <label for="courseId" class="form-label">Filter by Course</label>
                                    <select class="form-select" name="courseId" onchange="this.form.submit()">
                                        <option value="">All Courses</option>
                                        {{#each courses}}
                                        <option value="{{this.id}}" {{#if (eq this.id ../selectedCourseId)}}selected{{/if}}>
                                            {{this.title}}
                                        </option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="col-md-6 d-flex align-items-end">
                                    <a href="/admin/database/modules" class="btn btn-outline-secondary">
                                        <i class="fas fa-times"></i> Clear Filter
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Modules List -->
                    {{#if modules}}
                    <div class="row">
                        {{#each modules}}
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h6 class="card-title mb-0">{{this.title}}</h6>
                                        <span class="badge bg-primary">{{this.order}}</span>
                                    </div>
                                    
                                    <p class="card-text text-muted small">{{this.description}}</p>
                                    
                                    <div class="mb-2">
                                        <small class="text-primary">
                                            <i class="fas fa-book"></i> {{this.course.title}}
                                        </small>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <small class="text-success">
                                                <i class="fas fa-check-circle"></i> {{this.completionCount}} completed
                                            </small>
                                        </div>
                                        <small class="text-muted">
                                            {{formatDate this.created_at 'MMM DD'}}
                                        </small>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="btn-group w-100" role="group">
                                        <a href="/modules/{{this.id}}" target="_blank" 
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        <a href="/admin/database/progress?moduleId={{this.id}}" 
                                           class="btn btn-outline-success btn-sm">
                                            <i class="fas fa-chart-line"></i> Progress
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                    {{else}}
                    <div class="text-center py-5">
                        <i class="fas fa-list fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No modules found</h4>
                        {{#if selectedCourse}}
                        <p class="text-muted">No modules found for "{{selectedCourse.title}}"</p>
                        {{else}}
                        <p class="text-muted">No modules have been created yet.</p>
                        {{/if}}
                    </div>
                    {{/if}}

                    {{/if}}
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
