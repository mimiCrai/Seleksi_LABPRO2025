{{!-- browse.hbs - Extends the main layout --}}

{{!-- <div class="page-content"> --}}
  {{!-- <div class="page-header">
    <h1>Browse Courses</h1>
    <p>Discover and purchase courses to enhance your skills</p>
  </div> --}}

  <div class="search-bar">
    <form method="GET" action="/browse" class="search-form">
      <input 
        type="text" 
        name="query" 
        class="search-input"
        placeholder="Search courses..." 
        value="{{query}}"
      />
      <button type="submit" class="search-button">üîç Search</button>
    </form>
  </div>
  

  {{#if message}}
    <div class="alert alert-error">
      {{message}}
    </div>
  {{/if}}

  {{#if error}}
    <div class="alert alert-error">
      <strong>Error:</strong> {{error}}
    </div>
  {{/if}}

  {{#if searchPerformed}}
    <div class="search-results-info">
      {{#if hasResults}}
        <p>Found {{pagination.total_items}} course(s) for "{{query}}"</p>
      {{else}}
        <p>No courses found for "{{query}}". Try a different search term.</p>
      {{/if}}
    </div>
  {{/if}}

  {{#if courses}}
    <div class="courses-grid">
      {{#each courses}} 
        <div class="course-card">
          <div class="course-header">
            <h3>{{this.name}}{{this.title}}</h3>
            <div class="course-price">{{this.price}} credits</div>
          </div>
          
          <div class="course-body">
            <p class="course-description">{{this.description}}</p>
            {{#if this.instructor}}
              <p class="course-instructor">Instructor: {{this.instructor}}</p>
            {{/if}}
          </div>
          
          <div class="course-footer">
            <a href="/courses/{{this.id}}" class="btn btn-secondary" style="margin-right: 10px;">
              üìã View Details
            </a>
            <form action="/buy-course" method="POST" style="display: inline;">
              <input type="hidden" name="courseId" value="{{this.id}}">
              <button type="submit" class="btn btn-primary">
                üí≥ Buy Course
              </button>
            </form>
          </div>
        </div>
      {{/each}}
    </div>

    {{#if pagination}}
      {{#if (gt pagination.total_pages 1)}}
        <div class="pagination">
          {{#if (gt pagination.current_page 1)}}
            <a href="/browse?page={{subtract pagination.current_page 1}}{{#if query}}&query={{query}}{{/if}}" class="pagination-btn">
              ‚Üê Previous
            </a>
          {{/if}}
          
          <span class="pagination-info">
            Page {{pagination.current_page}} of {{pagination.total_pages}}
          </span>
          
          {{#if (lt pagination.current_page pagination.total_pages)}}
            <a href="/browse?page={{add pagination.current_page 1}}{{#if query}}&query={{query}}{{/if}}" class="pagination-btn">
              Next ‚Üí
            </a>
          {{/if}}
        </div>
      {{/if}}
    {{/if}}
  {{else}}
    <div class="empty-state">
      {{#if searchPerformed}}
        <h3>No courses found</h3>
        <p>No courses match your search for "{{query}}".</p>
        <p>Try searching for different keywords or <a href="/browse">browse all courses</a>.</p>
      {{else}}
        <h3>No courses available</h3>
        <p>Check back later for new courses!</p>
      {{/if}}
    </div>
  {{/if}}
{{!-- </div> --}}

<style>
  .search-bar {
    margin-bottom: 1.5rem;
  }

