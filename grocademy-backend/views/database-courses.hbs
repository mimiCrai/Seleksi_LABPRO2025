<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{pageTitle}} - Database Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            min-height: 100vh;
            background: #343a40;
        }
        .sidebar .nav-link {
            color: #adb5bd;
        }
        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            color: #fff;
            background: #495057;
        }
        .progress-ring {
            width: 60px;
            height: 60px;
        }
        .course-card {
            transition: transform 0.2s;
        }
        .course-card:hover {
            transform: translateY(-2px);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 px-0">
                <div class="sidebar">
                    <div class="p-3">
                        <h4 class="text-white">
                            <i class="fas fa-database"></i> DB Admin
                        </h4>
                    </div>
                    <nav class="nav flex-column">
                        <a class="nav-link" href="/admin/database">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                        <a class="nav-link" href="/admin/database/users">
                            <i class="fas fa-users"></i> Users
                        </a>
                        <a class="nav-link active" href="/admin/database/courses">
                            <i class="fas fa-book"></i> Courses
                        </a>
                        <a class="nav-link" href="/admin/database/modules">
                            <i class="fas fa-list"></i> Modules
                        </a>
                        <a class="nav-link" href="/admin/database/purchases">
                            <i class="fas fa-shopping-cart"></i> Purchases
                        </a>
                        <a class="nav-link" href="/admin/database/progress">
                            <i class="fas fa-chart-line"></i> Progress
                        </a>
                        <hr class="my-3">
                        <a class="nav-link" href="/login">
                            <i class="fas fa-home"></i> Back to Grocademy
                        </a>
                        <a class="nav-link" href="/docs">
                            <i class="fas fa-book"></i> API Documentation
                        </a>
                    </nav>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-10">
                <div class="p-4">
                    {{#if error}}
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i> {{error}}
                    </div>
                    {{else}}
                    
                    <!-- Page Header -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1><i class="fas fa-book"></i> Database Courses</h1>
                        <div>
                            <span class="badge bg-primary">Total: {{pagination.total}} courses</span>
                        </div>
                    </div>

                    <!-- Courses Grid -->
                    {{#if courses}}
                    <div class="row">
                        {{#each courses}}
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card course-card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">{{this.title}}</h5>
                                    <p class="card-text text-muted">{{this.description}}</p>
                                    
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <div class="text-center">
                                                <div class="h3 text-primary mb-0">{{this.moduleCount}}</div>
                                                <small class="text-muted">Modules</small>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-center">
                                                <div class="h3 text-success mb-0">{{this.purchaseCount}}</div>
                                                <small class="text-muted">Purchases</small>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="badge bg-info">${{this.price}}</span>
                                        <small class="text-muted">{{formatDate this.created_at 'MMM DD, YYYY'}}</small>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="btn-group w-100" role="group">
                                        <a href="/admin/database/modules?courseId={{this.id}}" 
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-list"></i> Modules
                                        </a>
                                        <a href="/admin/database/purchases?courseId={{this.id}}" 
                                           class="btn btn-outline-success btn-sm">
                                            <i class="fas fa-shopping-cart"></i> Sales
                                        </a>
                                        <a href="/admin/database/progress?courseId={{this.id}}" 
                                           class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-chart-line"></i> Progress
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>

                    <!-- Pagination -->
                    {{#if (gt pagination.totalPages 1)}}
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item {{#if (eq pagination.page 1)}}disabled{{/if}}">
                                <a class="page-link" href="?page={{subtract pagination.page 1}}">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                            
                            {{#each (range 1 (add pagination.totalPages 1))}}
                            <li class="page-item {{#if (eq this ../pagination.page)}}active{{/if}}">
                                <a class="page-link" href="?page={{this}}">{{this}}</a>
                            </li>
                            {{/each}}
                            
                            <li class="page-item {{#if (eq pagination.page pagination.totalPages)}}disabled{{/if}}">
                                <a class="page-link" href="?page={{add pagination.page 1}}">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                        <div class="text-center text-muted">
                            Showing {{add (multiply (subtract pagination.page 1) pagination.limit) 1}} to 
                            {{#if (lt (multiply pagination.page pagination.limit) pagination.total)}}
                                {{multiply pagination.page pagination.limit}}
                            {{else}}
                                {{pagination.total}}
                            {{/if}} 
                            of {{pagination.total}} courses
                        </div>
                    </nav>
                    {{/if}}
                    
                    {{else}}
                    <div class="text-center py-5">
                        <i class="fas fa-book fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No courses found</h4>
                        <p class="text-muted">No courses have been created yet.</p>
                    </div>
                    {{/if}}

                    {{/if}}
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
